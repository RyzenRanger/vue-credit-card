{"ast":null,"code":"import VueFlip from 'vue-flip';\nexport default {\n  name: 'credit-card',\n  components: {\n    'vue-flip': VueFlip\n  },\n  props: {\n    randomColors: {\n      type: Object,\n      required: true\n    }\n  },\n  computed: {\n    gradient() {\n      if (this.randomColors?.first && this.randomColors?.second) {\n        return `linear-gradient(177.23deg,\n                rgba(${this.randomColors.first.r}, ${this.randomColors.first.g}, ${this.randomColors.first.b}, 0.6),\n                rgba(${this.randomColors.second.r}, ${this.randomColors.second.g}, ${this.randomColors.second.b}, 0.6) 109.75%)`;\n      }\n      return 'linear-gradient(177.23deg, rgba(154, 29, 250, 0.6), rgba(58, 73, 249, 0.6) 109.75%)';\n    }\n  }\n};","map":{"version":3,"mappings":"AAuDA;AAEA;EACAA;EAEAC;IAAA;EAAA;EAEAC;IACAC;MACAC;MACAC;IACA;EACA;EAEAC;IACAC;MACA;QACA;AACA;AACA;MACA;MACA;IACA;EACA;AACA","names":["name","components","props","randomColors","type","required","computed","gradient"],"sourceRoot":"src/components","sources":["CreditCard.vue"],"sourcesContent":["<template>\n\t<vue-flip\n\t\t:active-hover = \"true\"\n\t\twidth\t\t\t\t\t= \"500px\"\n\t\theight\t\t\t\t= \"300px\"\n\t>\n\t\t<template v-slot:front>\n      <div\n        class  = \"front-side\"\n        :style = \"{ background: gradient }\"\n      >\n        <div class = \"ellipse\" :style = \"{ background: gradient }\"></div>\n        <div class = \"ellipse ellipse--below\" :style = \"{ background: gradient }\"></div>\n\n        <div class = \"top\">\n          <div class = \"balance\">\n            <p class = \"balance-name\">Current Balance</p>\n            <p class = \"balance-value\">$5,750,20</p>\n          </div>\n          <div class = \"mastercard\">\n            <img src = \"@/assets/img/master-card.png\" alt = \"mastercard\">\n            <p class = \"mastercard__text\">mastercard</p>\n          </div>\n        </div>\n        <div class = \"bottom\">\n          <p>5282 3456 7890 1289</p>\n          <p>09/25</p>\n        </div>\n\n        <div class = \"ellipse ellipse--bottom\" :style = \"{ background: gradient }\"></div>\n      </div>\n\t\t</template>\n\t\t<template v-slot:back >\n      <div\n        class  = \"back-side\"\n        :style = \"{ background: gradient }\"\n      >\n        <div class = \"back-side__black-line\"></div>\n        <div class = \"back-side__container\">\n          <div class = \"cvv\">123</div>\n          <p class = \"title\">AUTHORIZED SIGNATURE</p>\n          <div class = \"bank\">\n            <p>BANK</p>\n            <div></div>\n            <div></div>\n            <div></div>\n            <div></div>\n          </div>\n        </div>\n      </div>\n\t\t</template>\n\t</vue-flip>\n</template>\n\n<script>\nimport VueFlip from 'vue-flip';\n\nexport default {\n\tname: 'credit-card',\n\n\tcomponents: { 'vue-flip': VueFlip },\n\n  props: {\n    randomColors: {\n      type: Object,\n      required: true\n    }\n  },\n\n  computed: {\n    gradient () {\n      if (this.randomColors?.first && this.randomColors?.second) {\n        return `linear-gradient(177.23deg,\n                rgba(${this.randomColors.first.r}, ${this.randomColors.first.g}, ${this.randomColors.first.b}, 0.6),\n                rgba(${this.randomColors.second.r}, ${this.randomColors.second.g}, ${this.randomColors.second.b}, 0.6) 109.75%)`\n      }\n      return 'linear-gradient(177.23deg, rgba(154, 29, 250, 0.6), rgba(58, 73, 249, 0.6) 109.75%)'\n    }\n  }\n}\n</script>\n\n<style lang = 'scss'>\n$color-text: #FFFFFF;\n\n.flip-container { // default class for vue-flip\n  margin-bottom: 20px;\n}\n\n.front-side,\n.back-side {\n\tborder-radius: 30px;\n\twidth: 500px;\n\theight: 300px;\n  overflow: hidden;\n\tbox-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);\n  filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));\n}\n\n.front-side {\n  position: relative;\n  padding: 0 30px 30px 30px;\n  display: flex; flex-direction: column; justify-content: space-between;\n  color: $color-text;\n  .top {\n    display: flex; justify-content: space-between;\n\n    .balance {\n      padding-top: 30px;\n      font-size: 40px;\n      font-weight: 500;\n      &-name {\n        font-size: 28px;\n        opacity: 0.6;\n        margin-bottom: 10px;\n      }\n    }\n\n    .mastercard {\n      position: relative;\n      &__text {\n        position: absolute;\n        top: 80px;\n        left: 6px;\n      }\n    }\n  }\n\n  .bottom {\n    display: flex; justify-content: space-between;\n    font-size: 24px;\n    letter-spacing: 0.1rem;\n  }\n\n  .ellipse {\n    z-index: -1;\n    position: absolute;\n    top: -55px;\n    right: -140px;\n    width: 350px;\n    height: 200px;\n    border-radius: 50%;\n\n    &--below {\n      top: 0px;\n    }\n\n    &--bottom {\n      top: 190px;\n      left: -30px;\n    }\n  }\n}\n\n.back-side {\n  padding-top: 25px;\n\n  &__black-line {\n    width: 100%;\n    height: 60px;\n    background: rgba(0, 0, 0, 0.5);\n    margin-bottom: 20px;\n  }\n\n  &__container {\n    padding: 0 20px 20px 20px;\n    color: $color-text;\n\n    .cvv {\n      font-size: 26px;\n      border-radius: 10px;\n      padding: 5px 10px;\n      width: 60%;\n      text-align: right;\n      color: black;\n      background-color: rgba(255, 255, 255, 0.5);\n      margin-bottom: 5px;\n    }\n\n    .title {\n      font-size: 12px;\n      margin-bottom: 60px;\n    }\n\n    .bank {\n      p {\n        font-size: 30px;\n      }\n      div {\n        width: 5px; height: 5px;\n        background-color: #FFFFFF;\n        border-radius: 50%;\n      }\n    }\n  }\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}