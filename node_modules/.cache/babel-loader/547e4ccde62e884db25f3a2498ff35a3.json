{"ast":null,"code":"import CreditCard from '@/components/CreditCard.vue';\nimport ButtonRandomGradient from '@/components/ButtonRandomGradient.vue';\nexport default {\n  name: 'App',\n  components: {\n    CreditCard,\n    ButtonRandomGradient\n  },\n  data: () => ({\n    colors: {},\n    isOpacity: 1\n  }),\n  methods: {\n    async changeGradientAndOpacity(randomColors) {\n      await this.slowHidingThroughtOpacityChange().then(this.colors = randomColors);\n    },\n    async slowHidingThroughtOpacityChange() {\n      setInterval(() => {\n        if (this.isOpacity >= 0) {\n          this.isOpacity = this.isOpacity - 0.1;\n          console.log(this.isOpacity);\n          console.log(this.colors);\n        }\n      }, 10);\n    }\n  }\n};","map":{"version":3,"mappings":"AAYA;AACA;AAEA;EACAA;EAEAC;IAAAC;IAAAC;EAAA;EAEAC;IACAC;IACAC;EACA;EAEAC;IACA;MACA,kDACA,2BACA;IAEA;IACA;MACAC;QACA;UACA;UACAC;UACAA;QACA;MACA;IACA;EACA;AACA","names":["name","components","CreditCard","ButtonRandomGradient","data","colors","isOpacity","methods","setInterval","console"],"sourceRoot":"src","sources":["App.vue"],"sourcesContent":["<template>\n  <div id = \"app\">\n    <video autoplay muted loop class = \"video-background\">\n      <source src=\"@/assets/background-anime.mp4\" type=\"video/mp4\">\n    </video>\n\n    <credit-card :random-colors = 'colors' :style = '{ opacity: isOpacity }' />\n    <button-random-gradient @new-gradient = \"changeGradientAndOpacity\" />\n  </div>\n</template>\n\n<script>\nimport CreditCard from '@/components/CreditCard.vue'\nimport ButtonRandomGradient from '@/components/ButtonRandomGradient.vue';\n\nexport default {\n  name: 'App',\n\n  components: { CreditCard, ButtonRandomGradient },\n\n  data: () => ({\n    colors: {},\n    isOpacity: 1,\n  }),\n\n  methods: {\n    async changeGradientAndOpacity (randomColors) {\n      await this.slowHidingThroughtOpacityChange().then(\n        this.colors = randomColors\n      );\n      \n    },\n    async slowHidingThroughtOpacityChange () {\n      setInterval(() => {\n        if (this.isOpacity >= 0) {\n          this.isOpacity = this.isOpacity - 0.1;\n          console.log(this.isOpacity)\n          console.log(this.colors)\n        }\n      }, 10)\n    },\n  }\n}\n</script>\n\n<style lang = 'scss'>\n* {\n  margin: 0;\n  padding: 0;\n  box-sizing: border-box;\n  font-family: 'Cera Pro Medium';\n}\n\n@font-face {\n\tfont-family: 'Cera Pro Medium';\n\tsrc: url('@/assets/fonts/CeraPro-Medium.eot'); //CeraPro-Thin.eot\n\tsrc: url('@/assets/fonts/CeraPro-Medium.eot?#iefix') format('embedded-opentype'),\n\turl('@/assets/fonts/CeraPro-Medium.woff') format('woff'),\n\turl('@/assets/fonts/CeraPro-Medium.ttf') format('truetype');\n\tfont-weight: normal;\n\tfont-style: normal;\n}\n\n#app {\n  display: flex;\n  flex-direction: column;\n  justify-content: center;\n  align-items: center;\n  width: 100vw;\n  height: 100vh;\n}\n\n.video-background {\n  position: fixed;\n  z-index: -999;\n  top: 0;\n  left: 0;\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}